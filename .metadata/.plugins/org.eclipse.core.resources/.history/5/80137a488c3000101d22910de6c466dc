package stream;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

public class MapGrouping {
	public static void main(String args[]) {

		List<Book> books = Arrays.asList(new Book("The great gatsby", "Aditya", "fiction"),
				new Book("the dairy of young girl", "Bhushan", "non-fiction"), new Book("harry potter and philosophers stone", "Dinesh", "children"),
				new Book("the catcher in the eye", "Nilesh", "fiction"));

		List<String> newBooks = getBooks(books);
		for(String book:newBooks)
		{
			System.out.println(book);
		}
	}

	private static List<String> getBooks(List<Book> books) {
		Map<String, List<Book>> bookGroup = books.stream().collect(Collectors.groupingBy(Book::getCategory));

		List<String> newBookList = new ArrayList<>();
		bookGroup.forEach((category, booklList) -> {
			booklList.forEach(book -> newBookList.add(book.getBookName()));
		});
		return newBookList;
	}
}
