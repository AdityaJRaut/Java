package stream;

import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

public class Collect {

	public static void main(String[] args) {
		List<String> alist=Arrays.asList("apple","banana","apple","banana","mango","pinapple");
		Map<Object,Integer> wordFreq =alist.stream().collect(Collectors.groupingBy(word->word,Collectors.counting()));
		System.out.println(wordFreq);
	}

}
